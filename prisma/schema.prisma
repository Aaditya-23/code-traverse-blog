generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Post {
  id          String   @id @default(uuid())
  slug        String   @unique @db.VarChar(200)
  likes       Int      @default(0)
  views       Int      @default(0)
  publishedAt DateTime @default(now())
  updatedAt   DateTime @updatedAt()
}
